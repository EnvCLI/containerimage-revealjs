#!/usr/bin/env bash
set -euo pipefail

# Main Function
#
# Arguments:
#  --file filename.adoc
#  --targetdir path
#
# Returns the exit code of the last command executed or 0 otherwise.
function main()
{
  # call node script
  node /usr/local/bin/asciidoctor-revealjs.js "$@"
}

# entrypoint
main "$@"
